<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>

    <!-- 1、指定外部的属性元素-->
<!--    <properties/>-->

    <!-- 2、驱动路径 必须填写绝对路径 -->
    <classPathEntry location="E:\study\mybatis\generator\src\main\resources\mysql-connector-java-8.0.28.jar"/>

    <!-- 3、指定生成一组对象的环境 -->
    <context id="MySqlContext" targetRuntime="MyBatis3Simple" defaultModelType="flat">

        <!-- 3.1 指定分隔符，java 文件编码-->
        <property name="beginningDelimiter" value="`"/>
        <property name="endingDelimiter" value="`"/>
        <property name="javaFileEncoding" value="UTF-8"/>

        <!-- 3.2 标签用来定义一个插件，type指定插件的类全限定名 -->
        <!-- 一般用不到 -->
<!--        <plugin type="org.mybatis.generator.plugins.CachePlugin">
            <property name="cache_eviction" value="LRU"/>
            <property name="cache_size" value="1024"/>
        </plugin>-->

        <!-- 3.3 用来配置如何生成注释信息，可以自定义控制生成的注释格式，tpye：自定义注释的类名 -->
        <!-- 有默认的，一般情况下适用默认即可-->
        <commentGenerator type="tk.mybatis.generator.MyCommentGenerator">
            <property name="suppressDate" value="true"/>
            <property name="addRemarkComments" value="true"/>
        </commentGenerator>

        <!-- 3.4 连接数据库的信息，必须，并且只能有一个 -->
        <jdbcConnection driverClass="com.mysql.cj.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/mybatis"
                        userId="root"
                        password="123456">
        </jdbcConnection>

        <!-- 3.5 jdbc 数据类型和 java 数据类型的映射，一般情况适用默认的就好，不需要配置这个标签 -->
        <!-- 不建议修改 -->
        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>

        <!-- 3.6 控制生成的实体类存放路径 -->
        <!-- targetProject ==> 目标项目的绝对路径或者相对路径 -->
        <!-- targetPackage ==> 存放实体类的目标包路径 -->
        <javaModelGenerator targetPackage="tk.mybatis.generator.pojo" targetProject="E:\study\mybatis\generator\src\main\java">
            <property name="trimStrings" value="true" />
            <!-- 所有实体类的基类 -->
            <property name="rootClass" value="tk.mybatis.generator.pojo.BasePO" />
        </javaModelGenerator>

        <!-- 3.7 生成的mapper xml 文件存放路径 -->
        <!-- targetProject ==> 目标项目的绝对路径或者相对路径 -->
        <!-- targetPackage ==> 存放xml具体的文件夹路径 -->
        <sqlMapGenerator targetPackage="generator"  targetProject="E:\study\mybatis\generator\src\main\resources"/>

        <!-- 3.8 生成 mapper 接口 的存放路径 -->
        <!-- targetProject ==> 目标项目的绝对路径或者相对路径 -->
        <!-- targetPackage ==> 存放接口的具体包名路径 -->
        <!-- type ==> 客户端代码生成器，是基于xml 还是 注解，或者 混用-->
        <javaClientGenerator type="XMLMAPPER" targetPackage="tk.mybatis.generator.dao"  targetProject="E:\study\mybatis\generator\src\main\java"/>

        <!-- 3.9 最重要的注解，要生成代码的表 % 是通配符，指定库下的所有表-->
        <table schema="mybatis" tableName="country">
            <generatedKey column="id" sqlStatement="MySql"/>
        </table>
    </context>
</generatorConfiguration>